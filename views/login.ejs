<%- include("partials/headers.ejs") %>
<title>Login</title>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <div class="container">
        
        <%- include("partials/nav.ejs") %>

        <div class="content">

            <h1>Login</h1>

            <div class="form-container">
                <form action="/api/login" method="post" id="login-form">
                    <input type="text" name="username" placeholder="Enter username" class="text-input">
                    <input type="password" name="password" placeholder="Enter password" class="text-input">

                    <input type="submit" value="submit" class="submit">
                </form>
            </div>

            <div class="links">
                <a href="/signup">New to the site? Create an account</a>
            </div>
        </div>


    </div>

<script src="/js/base.js"></script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
</body>
</html>