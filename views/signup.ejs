
<%- include("partials/headers.ejs") %>
<title>Create an account</title>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <div class="container">

        <%- include("partials/nav.ejs") %>

        <div class="content">

            <h1>Signup</h1>

            <div class="form-container">
                <form action="/api/login" method="post" id="signup-form">
                    <input type="text" name="username" placeholder="Enter username" class="text-input">
                    <input type="password" name="password" placeholder="Enter password" class="text-input">

                    <input type="submit" value="Create account" class="submit">
                </form>
            </div>

            <div class="links">
                <a href="/login">Already have an account? proceed to login..</a>
            </div>
        </div>


    </div>

<script src="/js/base.js"></script>
<script src="/js/signup.js"></script>
</body>
</html>